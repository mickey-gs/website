<h2>Experience</h2>
<div class="cv-section">
  <% @experience.each do |ex| %>
    <div class="experience">
      <h3>
        <span class="title">
          <%= ex.title %>
        </span>
        
        <span class="location">
          <%= " - " + ex.location %>
        </span>

        <span class="date">
          <%= ex.start_date.strftime("%b %y") %> -
          <%= ex.end_date.strftime("%b %y") %>
        </span>
      </h3>
      <p class="description">
        <%= ex.description %>
      </p>
    </div>
  <% end %>
</div>